<% include ../partials/header %>
<section class="about-us" id="about" style="margin-top: 65px; width: 100vw; min-height: 80vh;">
    <div class="container" style="align-content: center; width: 75vw;">
        <br><br>
        <div class="row">
            <div class="col-md-12 col-xs-12 text-center">
                <h1 class="section-title">Come Shop with us!</h1>
                <h6>South Africa Only!!</h6>
            </div>

        </div>
        <div id="cartSummary" style="display: flex; justify-content: flex-end; margin-top: 20px;">
            <button class="btn btn-primary boredomBtn viewCart" style="margin-right: 5px;">View/Checkout</button>
            <div id="cartCount" style="display: flex;">
                <i class="fas fa-shopping-cart fa-2x" style="margin-right: 10px; color: #2b2b28;"></i>
                <div
                    style="width: 30px; height: 30px; border: 1px solid green; background-color: green; border-radius: 50%; display: flex; justify-content: center;">
                    <div style="display: flex; flex-direction: column; justify-content: flex-start;">
                        <p id="orderTotalQty" style="color: white; font-weight: bold;">0</p>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div id="stockItems">
            <input type="number" name="" id=""value="100" max-value="2">
        </div>
        <div id="individualstockItem" style="display: none">
        </div>
        <div id="shoppingCart" style="display: none">
            <h1>CART</h1><br>
            <div id="wholeCart" style="display: flex; width: 100%">
                <ol id="cartItems" style="width: 65%">
                   
                </ol>
                <div id="summary"
                    style="margin-left: 10px; width: 35%; border: 1px solid grey; padding: 5px 5px; border-radius: 7px;">
                    <div id="cartValues"></div>
                    <hr>
                    <div style="display: flex; justify-content: space-between; width:100%;">
                        <label for="">Subtotal:</label>
                        <input id="subtotal"
                            style="border: none; background-color: lightgrey; text-align: right; margin-right: 7px;"
                            type="text" value="${subtotal}">
                    </div>
                    <div style="display: flex; justify-content: space-between; width:100%;">
                        <label for="">Delivery:</label>
                        <input id="delivery"
                            style="border: none; background-color: lightgrey;text-align: right; margin-right: 7px;"
                            type="text" value="${delivery}">
                    </div>
                    <hr>
                    <div style="display: flex; justify-content: space-between; width:100%;">
                        <label for="">Nett:</label>
                        <input id="nett"
                            style="border: none; background-color: lightgrey;text-align: right; margin-right: 7px;"
                            type="text" value="${nett}">
                    </div>
                </div>
            </div>
        </div>
        <div id="checkoutdiv" style="display: none;">
            <div id="alert"
                style="height: 50px; border: 1px solid lightgreen; background-color: lightgreen; border-radius: 7px; display: none;">
                Client fills in details, pays, he/she gets an invoice from you, you take goods to postNet. Deal Done!!!
            </div>
            <button id="checkoutBtn" style="float: right; margin-top: 10px;"
                class="btn btn-primary boredomBtn">Checkout</button><br><br>
            <button class="btn btn-primary boredomBtn return">Continue Shopping</button>
        </div>
    </div>
    </div>
</section>
<!--======== end about us =========-->
<script src="../../js/store.js"></script>
<% include ../partials/footer %>